<h3 class="h3--teal">Status Image</h3>
<div class="form-pair">
  <label class="form-label">Branch</label>
  {{#if repo.branches}}
    <XSelect @value={{branch.name}} @onChange={{action (mut branch)}} as |xs|>
      {{#each repo.branches as |branch|}}
        <xs.option @value={{branch.name}}>{{branch.name}}</xs.option>
      {{/each}}
    </XSelect>
  {{else}}
    {{loading-indicator}}
  {{/if}}
</div>

<div class="form-pair">
  <label class="form-label">
    <XSelect @value=format @onChange={{action (mut format)}} as |xs|>
      {{#each formats as |format|}}
        <xs.option @value={{format}}>{{format}}</xs.option>
      {{/each}}
    </XSelect>
  </label>
  {{status-image-input value=statusString class="url" rows=3}}
</div>

<button type="button" title="Close modal" class="modal-close pointer" {{action 'toggleStatusImageModal'}}>{{svg-jar 'icon-failed' class="icon"}}</button>
