{{#styleguides/grid-container
  base=2
  md=4
  as |grid|
}}
  {{#each products as |product|}}
    {{#grid.item class="p-4 border-grey-150 border"}}
      <h3>{{product.name}}</h3>
      <h4>{{product.description}}</h4>

      <div>
        {{product.builds}}
        {{pluralize product.builds 'Concurrent job' without-count=true}}
      </div>
      <div>{{svg-jar 'features-check' class="w-4 inline-block"}} Unlimited build minutes</div>
      <div>{{svg-jar 'features-check' class="w-4 inline-block"}} Unlimited repositories</div>
      <div>{{svg-jar 'features-check' class="w-4 inline-block"}} Unlimited collaborators</div>

      <div>
        {{product.currencySymbol}}{{product.displayPrice}}
        {{product.currency}}
        {{product.interval}}
      </div>
    {{/grid.item}}
  {{/each}}
{{/styleguides/grid-container}}
<div class="text-center p-4 border-grey-150 border">
  <button>Start Your Free Trial</button>
</div>